%h1= t Event.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Event.human_attribute_name(:title)
      %th= Event.human_attribute_name(:kind)
      %th= Event.human_attribute_name(:started_on)
      %th= Event.human_attribute_name(:finished_on)
      %th= Event.human_attribute_name(:content)
      %th= Event.human_attribute_name(:cover)
      %th= Event.human_attribute_name(:status)
      %th= t 'actions.actions'

  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.kind
        %td= event.started_on
        %td= event.finished_on
        %td= event.content
        %td= image_tag event.cover.thumb.url if event.cover?
        %td= status_mark event.status
        %td= render 'admin/shared/index_buttons', resource: event
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_event_path, class: 'btn btn-primary btn-block'
