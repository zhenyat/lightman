.container-fluid
  .row
    - @newsbites.each do |newsbite|
      .row
        .col-md-3.vcenter.text-center
          - if newsbite.cover.present?
            = image_tag newsbite.cover.preview
          - else
            = newsbite.title
        .col-md-8.vcenter.text-justify
          = raw newsbite.content
          = zt_date newsbite.published_on
      %br
